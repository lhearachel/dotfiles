[user]
    name = Rachel
    email = lhearachel@proton.me

[init]
    defaultBranch = main

[core]
    autocrlf = input
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    hyperlinks = true
    line-numbers = true

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = default

[alias]
    sweep = ! git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D
    upsync = ! git pull && git sweep
