#!/usr/bin/env bash

# ~ copy dotfiles into the repo for staging ~

# Standalones
cp "$HOME/.tmux.conf" "$DOTFILES/.tmux.conf"
cp "$XDG_CONFIG_HOME/starship.toml" "$DOTFILES/starship.toml"
cp "$XDG_CONFIG_HOME/picom/picom.conf" "$DOTFILES/picom.conf"

# Bash
cp "$HOME/.bashrc" "$DOTFILES/.bashrc"
cp "$HOME/.bash_profile" "$DOTFILES/.bash_profile"

# Rofi
cp "$XDG_CONFIG_HOME/rofi/config.rasi" "$DOTFILES/rofi/config.rasi"
cp "$XDG_DATA_HOME/rofi/themes/catppuccin-macchiato.rasi" "$DOTFILES/rofi/catppuccin-macchiato.rasi"

# Alacritty
cp "$XDG_CONFIG_HOME/alacritty/catppuccin-mocha.toml" "$DOTFILES/alacritty/catppuccin-mocha.toml"
cp "$XDG_CONFIG_HOME/alacritty/alacritty.toml" "$DOTFILES/alacritty/alacritty.toml"

# Xinit
cp "$HOME/.xinitrc" "$DOTFILES/.xinitrc"

# Qtile
cp "$XDG_CONFIG_HOME/qtile/config.py" "$DOTFILES/qtile/config.py"
cp "$XDG_CONFIG_HOME/qtile/colors.py" "$DOTFILES/qtile/colors.py"
cp "$XDG_CONFIG_HOME/qtile/groups.py" "$DOTFILES/qtile/groups.py"
cp "$XDG_CONFIG_HOME/qtile/keys.py" "$DOTFILES/qtile/keys.py"
cp "$XDG_CONFIG_HOME/qtile/screens.py" "$DOTFILES/qtile/screens.py"
cp "$XDG_CONFIG_HOME/qtile/widgets.py" "$DOTFILES/qtile/widgets.py"
cp "$XDG_CONFIG_HOME/qtile/autostart.sh" "$DOTFILES/qtile/autostart.sh"

# copy nvim config, make sure to delete the lazy-lock.json
cp -r "$XDG_CONFIG_HOME/nvim" "$DOTFILES"

