#!/usr/bin/env fish

set --local year (date +%Y)
set --local cwd (pwd)

z dex
cd "journal/$year"

set --local choice (find . -type f | sort -r | fzf)
sed -n "/### Summary/,\$p" <$choice \
    | tail -n +5 \
    | sed "s/^/>/g" \
    | sed "s/âž¡ï¸/:arrow:/g" \
    | sed "s/âœ…/:checkbox-checked:/g" \
    | sed "s/ðŸš§/:checkbox-deferred:/g" \
    | sed "s/âŒ/:checkbox-unchecked:/g" \
    | sed "s/â„¹/:information-source:/g" \
    | sed "s/^>:/> :/g" \
    | "$CLIP_COPY"

cd $cwd
